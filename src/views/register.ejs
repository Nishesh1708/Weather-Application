<%- include("partials/header") %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-600 to-sky-500 px-6">

  <div class="w-full max-w-md bg-white/20 backdrop-blur-md rounded-2xl shadow-xl p-8 text-white">

    <!-- Heading -->
    <h2 class="text-3xl font-extrabold text-center">
      Create Your Account ğŸš€
    </h2>
    <p class="text-center text-indigo-100 mt-2">
      Join WeatherNow and stay updated
    </p>

    <!-- Register Form -->
    <form action="/account/register" method="POST" class="mt-8 space-y-5">

      <!-- Full Name -->
      <div>
        <label class="block text-sm mb-1">Full Name</label>
        <input
          type="text"
          name="name"
          placeholder="Nishesh Shukla"
          required
          class="w-full px-4 py-3 rounded-lg text-gray-800 outline-none focus:ring-2 focus:ring-indigo-500"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm mb-1">Email</label>
        <input
          type="email"
          name="email"
          placeholder="you@example.com"
          required
          class="w-full px-4 py-3 rounded-lg text-gray-800 outline-none focus:ring-2 focus:ring-indigo-500"
        />
      </div>

      <!-- Password -->
      <div>
        <label class="block text-sm mb-1">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Minimum 6 characters"
          minlength="6"
          required
          class="w-full px-4 py-3 rounded-lg text-gray-800 outline-none focus:ring-2 focus:ring-indigo-500"
        />
      </div>

      <!-- Error / Success Message -->
      <% if (typeof error !== "undefined") { %>
        <p class="text-red-200 text-sm text-center">
          <%= error %>
        </p>
      <% } %>

      <% if (typeof success !== "undefined") { %>
        <p class="text-green-200 text-sm text-center">
          <%= success %>
        </p>
      <% } %>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-yellow-400 text-indigo-900 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition"
      >
        Create Account
      </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center gap-3 my-6">
      <div class="flex-1 h-px bg-white/30"></div>
      <span class="text-sm text-indigo-100">OR</span>
      <div class="flex-1 h-px bg-white/30"></div>
    </div>

    <!-- Login Link -->
    <p class="text-center text-sm text-indigo-100">
      Already have an account?
      <a
        href="/login"
        class="text-white font-semibold hover:underline"
      >
        Login
      </a>
    </p>

    <!-- Back to Landing -->
    <p class="text-center text-sm mt-4">
      <a href="/" class="text-indigo-100 hover:underline">
        â† Back to Home
      </a>
    </p>

  </div>

</div>

<%- include("partials/footer") %>
